{% extends 'base_simple_header.html.twig' %}

{% block title %}Accueil | Blogger
{% endblock %}

{% block page_content %}

	<div
		class="container">

		{# Title #}
		<div class="row mb-3">
			<div class="col">
				<h1>Les derniers articles</h1>
			</div>
		</div>

		{# Articles cards list #}
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

			{% for post in posts %}
				<div class="col">
					<a href="#" class="text-decoration-none">
						<div class="card shadow-sm h-100">
							<img src="https://picsum.photos/seed/picsum/200/300" alt="..." width="100%" style="aspect-ratio:16/10; object-fit: cover;">
							<div class="card-body d-flex flex-column justify-content-between">
								<div>
									<h5 class="card-title">{{ post.title }}</h5>
									<p class="card-text mb-3">
										{{post.contents.last.data|length > 150 ? post.contents.last.data|slice(0, 150) ~ '...' : post.contents.last.data}}</p>
								</div>
								<div class="d-flex justify-content-between align-items-center">
									<div>
										{% for tag in post.tags %}
											<span class="badge bg-secondary">{{ tag.name }}</span>
										{% endfor %}
									</div>
									<small class="text-body-secondary">Publi√© le
										{{ post.createdAt|date('d/m/Y') }}</small>
								</div>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}

		</div>
	{% endblock %}
