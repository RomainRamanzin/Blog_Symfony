{% extends 'adminMenu.html.twig' %}

{% block title %}Les médias
{% endblock %}

{% block content %}

	<div class="example-wrapper">
		<h1>Liste des média</h1>

		<div class="m-3">
			<a class="btn btn-primary" href="{{ path('app_admin_media_create') }}">Créer un media</a>
		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Content</th>
					<th scope="col">titre</th>
                         <th scope="col">Type</th>
                         <th scope="col">Texte alternatif</th>
                         <th scope="col">Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for media in medias %}
					<tr>
						<td class="align-middle">{{ media.id }}</td>
						<td class="align-middle"><img src="{{ asset('uploads/' ~ media.path) }}" alt="" height="70"></td>
						<td class="align-middle">{{ media.title }}</td>
                              <td class="align-middle">{{ media.type }}</td>
                              <td class="align-middle">{{ media.alt }}</td>
						<td
							class="align-middle">
							<a class="btn btn-primary btn-sm" href="{{ path('app_admin_media_view', {'id' : media.id}) }}"><i class="fa-solid fa-eye"></i></a>
							<a class="btn btn-warning btn-sm" href="{{ path('app_admin_media_update', {'id' : media.id}) }}">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<a class="btn btn-danger btn-sm" href="{{ path('app_admin_media_delete', {'id' : media.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer ce média ?');">
								<i class="fa-solid fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
				{% if medias|length == 0 %}
					<tr>
						<td class="text-center" colspan="6">Aucun média</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}
