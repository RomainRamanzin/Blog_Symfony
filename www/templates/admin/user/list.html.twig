{% extends 'adminMenu.html.twig' %}

{% block title %}Les utilisateurs
{% endblock %}

{% block content %}

	<div class="example-wrapper">
		<h1>Liste des utilisateurs</h1>

		{# <div class="m-3">
			<a class="btn btn-primary" href="{{ path('app_admin_user_create') }}">CrÃ©er un utilisateur</a>
		</div> #}

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">id</th>
					<th scope="col">Email</th>
                         <th scope="col">Roles</th>
                         <th scope="col">Nom d'utilisateur</th>
                         <th scope="col">Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for user in users %}
					<tr>
						<td class="align-middle">{{ user.id }}</td>
						<td class="align-middle">{{ user.email }}</td>
                              <td class="align-middle">{{ user.roles|join(', ') }}</td>
                              <td class="align-middle">{{ user.username }}</td>
						<td class="align-middle"> -
							{# <a class="btn btn-primary btn-sm" href="{{ path('app_admin_tag_view', {'id' : tag.id}) }}"><i class="fa-solid fa-eye"></i></a>
							<a class="btn btn-warning btn-sm" href="{{ path('app_admin_tag_update', {'id' : tag.id}) }}">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<a class="btn btn-danger btn-sm" href="{{ path('app_admin_tag_delete', {'id' : tag.id}) }}" onclick="return confirm('Voulez vous vraiment supprimer ce tag ?');">
								<i class="fa-solid fa-trash"></i>
							</a> #}
						</td>
					</tr>
				{% endfor %}
				{% if users|length == 0 %}
					<tr>
						<td class="text-center" colspan="5">Aucun utilisateur</td>
					</tr>
				{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}
